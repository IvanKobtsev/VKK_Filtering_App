<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/background_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/Logo_Description"
        android:rotation="90"
        android:scaleX="2"
        android:scaleY="2"
        android:src="@drawable/bg"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="235dp"
        android:layout_height="234dp"
        android:layout_marginTop="4dp"
        android:contentDescription="@string/Logo_Description"
        app:layout_constraintBottom_toTopOf="@+id/imageEditorOpener"
        app:layout_constraintEnd_toEndOf="@+id/imageEditorOpener"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="@+id/imageEditorOpener"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.559"
        app:srcCompat="@drawable/logo" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/imageEditorOpener"
        android:layout_width="240dp"
        android:layout_height="60dp"
        android:layout_margin="10dp"
        android:layout_marginBottom="12dp"
        android:background="@color/MainButtonBGColor"
        android:drawablePadding="8dp"
        android:fontFamily="@font/tektur_bold"
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/ImageEditor_ButtonLabel"
        android:textColor="@color/TitleFontColor"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/tDCubeOpener"
        app:layout_constraintEnd_toEndOf="@+id/tDCubeOpener"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="@+id/splineEditorOpener"
        tools:ignore="TextSizeCheck" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/tDCubeOpener"
        android:layout_width="110dp"
        android:layout_height="60dp"
        android:layout_marginEnd="84dp"
        android:layout_marginBottom="264dp"
        android:background="@color/MainButtonBGColor"
        android:fontFamily="@font/tektur_bold"
        android:text="@string/TDCube_ButtonLabel"
        android:textColor="@color/TitleFontColor"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.981"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="TextSizeCheck" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/splineEditorOpener"
        android:layout_width="110dp"
        android:layout_height="60dp"
        android:layout_marginBottom="264dp"
        android:background="@color/MainButtonBGColor"
        android:fontFamily="@font/tektur_bold"
        android:text="@string/Spline_ButtonLabel"
        android:textColor="@color/TitleFontColor"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tDCubeOpener"
        app:layout_constraintHorizontal_bias="0.814"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="TextSizeCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>