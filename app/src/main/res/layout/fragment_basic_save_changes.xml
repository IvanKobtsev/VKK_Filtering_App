<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    tools:context=".BasicSaveChangesFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:paddingTop="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/affineSaveButton"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/icon_apply_button"
            android:fontFamily="@font/tektur_medium"
            android:text="@string/save"
            android:textAlignment="center"
            android:textColor="@color/MainFontColor" />

        <Button
            android:id="@+id/affineCancelButton"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@drawable/icon_cancel_button"
            android:fontFamily="@font/tektur_medium"
            android:text="@string/cancel"
            android:textAlignment="center"
            android:textColor="@color/MainFontColor" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>